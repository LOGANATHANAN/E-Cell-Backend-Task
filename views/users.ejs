<div class="container">
    
    <div class="col-sm-12">
       <h2 style="text-align: center;margin-top:50px;"> E-Cell BackEnd Web Development Task</h2>
    </div>
    <hr style="color: black;">
    
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">
    <div class="col">
        <% if(success_msg!=''){ %>
            <div class="alert alert-success alert-dismissible fade show">
              
              <p><%= success_msg %></p>
              <button type="button" class="close" data-dismiss="alert">&times;</button>
  
            </div>
          <% } %>
  
          <% if(error_msg!=''){ %>
            <div class="alert alert-warning alert-dismissible fade show">
              
              <p><%= error_msg %></p>
              <button type="button" class="close" data-dismiss="alert">&times;</button>
  
            </div>
          <% } %>

    </div>
    <form method="POST" action="/user">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Username</span>
          </div>
          <input type="text" class="form-control" placeholder="Enter your username" name="name">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">Email</span>
            </div>
            <input type="email" class="form-control" placeholder="Enter your email" name="email">
          </div>
          <div class="input-group mb-3">
            <textarea row="5" class="form-control" placeholder="message" name="msg"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <hr>
          <a href="/auth">Switch to Second API</a>
      </form>
        </div>
      <div class="col-3">

    </div>

      </div>

</div>